---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Skills">
  <section class="space-y-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">
        Skills & Expertise
