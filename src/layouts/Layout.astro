---
const { title } = Astro.props;
import { ClientRouter } from "astro:transitions";
---
<!doctype html>
<html lang="en" class="bg-gray-900 text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Jack's Portfolio – Projects, Skills, and Experience" />
    <meta name="theme-color" content="#111827" />
    <title>{title ? `${title} | Portfolio` : "Portfolio"}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <ClientRouter />
    
    <header class="p-4 bg-gray-800 flex gap-4">
      <a href="/" class={`hover:underline ${Astro.url.pathname === "/" ? "text-blue-400" : ""}`}>Home</a>
      <a href="/projects" class={`hover:underline ${Astro.url.pathname === "/projects" ? "text-blue-400" : ""}`}>Projects</a>
      <a href="/about" class={`hover:underline ${Astro.url.pathname === "/about" ? "text-blue-400" : ""}`}>About</a>
    </header>

    <main class="flex-1 p-6">
      <slot />
    </main>

    <footer class="p-4 bg-gray-800 text-center text-sm">
      © {new Date().getFullYear()} Jhaxce | Portfolio
    </footer>
  </body>
</html>
